{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  
    "editor.formatOnSave": true,
  
    "prettier.printWidth": 80,
  
    "prettier.tabWidth": 2,
  
    "prettier.semi": true,
  
    "prettier.htmlWhitespaceSensitivity": "css",
  
    "[html]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.formatOnType": true
    },
  
    "[css]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.formatOnType": true
    },

    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.formatOnType": true
    },
    
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.formatOnType": true
    },

    "cSpell.words": ["nestjs", "websockets"]
  }
  